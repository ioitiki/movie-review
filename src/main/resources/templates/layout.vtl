<!DOCTYPE html>
<html>
  <head>
    <title>movie-review</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="/app.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="/js/bootstrap-select.js"></script>
  </head>
  <body>
    <!-- begin inner template-->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a href="/"><img src="/images/reel-icon.svg" id="home-icon" /></a>
        </div>
        <ul class="nav navbar-nav">
          #if($admin)
            <li><a href="/admin">Administrator</a></li>
          #end
          <li><a href="/directors">Browse Directors</a></li>
          <li><a href="/movies">Browse Movies</a></li>
          <!-- <li><a href="/search">Search</a></li> -->
        </ul>
        #if($admin)
        <form class="navbar-form navbar-right" action="/logout" method="post">
          <button type="submit" class="btn search-btn btn-info">Logout</button>
        </form>
        #else
          <form class="navbar-form navbar-right" action="/login" method="post">
            <button type="submit" class="btn search-btn btn-info">Login as Admin</button>
          </form>
        #end
        <form action="/search" class="navbar-form navbar-right" method="post">
          <div class="form-group">
            <input required name="searchInput" type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="search-btn btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
        </form>
      </div>
    </nav>
    <div id="content" class="container-fluid">
      #parse( $template )
    </div>
    <!-- end inner template-->
  </body>
</html>
